version: '3.8'

services:
  # Serwis ASP.NET
  aspnet-app:
    image: mcr.microsoft.com/dotnet/aspnet:8.0
    container_name: aspnet-app
    ports:
      - "5000:80"

  # Serwis MSSQL
  mssql-server:
    image: mcr.microsoft.com/mssql/server:2022-latest
    container_name: researchcruiseapp-db
    environment:
      SA_PASSWORD: "p@ssw0rd"  # Ustaw swoje has≈Ço
      ACCEPT_EULA: "Y"
      MSSQL_PID: "Express"
    ports:
      - "1433:1433"
    volumes:
      - ./researchcruisepp-mssql:/var/opt/mssql

  # Serwis Node.js (do aplikacji ReactJS)
  react-app:
    image: node:14
    container_name: react-app
    working_dir: /app
    command: "npm start"
    volumes:
      - ./path/to/your/react/app:/app
    ports:
      - "3000:3000"
